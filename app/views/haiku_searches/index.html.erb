
<h1>俳句の検索</h1>
<%= form_tag :controller=>'haiku_searches' ,:action=>'search' do  %>
  <div class="field">
    Word:
    <%= text_field_tag :keyword %>
  </div>
  <div class="actions">
    <%= submit_tag '検索' %>
  </div>
<% end %>

<h2>結果</h2>

<table>
  <tr>
    <th>Sentence</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @haiku_searches.each do |haiku_search| %>
  <tr>
    <td><%= haiku_search.sentence %></td>
    <td><%= link_to 'Show', haiku_search %></td>
    <td><%= link_to 'Edit', edit_haiku_search_path(haiku_search) %></td>
    <td><%= link_to 'Destroy', haiku_search, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Haiku search', new_haiku_search_path %>
